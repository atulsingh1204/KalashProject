                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="0"
                    app:iss_period="1000" />


            </androidx.cardview.widget.CardView>


