<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/green_border"
        android:elevation="5dp"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:padding="5dp"
                android:text="Order Id:"
                android:textColor="@color/black"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/inspection_three_orderId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.9"
                android:padding="5dp"
                android:text="01"
                android:textColor="@color/black"
                android:textStyle="normal" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:padding="5dp"
                android:text="OT Plant in Female:"
                android:textColor="@color/black"
                android:textStyle="normal" />

            <TextView

                android:id="@+id/inspection_three_ot_plant_in_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.9"
                android:padding="5dp"
                android:text="123"
                android:textColor="@color/black"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:padding="5dp"
                android:text="Details:"
                android:textColor="@color/black"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/inpection_three_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.9"
                android:padding="5dp"
                android:text="Abc"
                android:textColor="@color/black"
                android:textStyle="normal" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:padding="5dp"
                android:text="Disease Plant  in F:"
                android:textColor="@color/black"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/inpection_three_disease_plant_in_f"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.9"
                android:padding="5dp"
                android:text="Abc"
                android:textColor="@color/black"
                android:textStyle="normal" />


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>